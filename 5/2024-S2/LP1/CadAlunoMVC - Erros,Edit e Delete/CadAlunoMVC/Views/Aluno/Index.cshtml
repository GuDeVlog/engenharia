@model List<AlunoViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Listagem de Alunos</h2>

<a href="/aluno/create" class="btn btn-info" >Novo Registro</a>
<br />

<table class="table table-responsive table-striped">
    <tr>
        <th>Ações</th>
        <th>RA</th>
        <th>Nome</th>
        <th>Data de nascimento</th>
        <th>Mensalidade</th>
    </tr>
    @foreach (var aluno in Model)
    {
        <tr>
            <td>
                <a href="/aluno/edit?id=@aluno.Id">Editar</a>
                &nbsp;&nbsp;
                <a href="javascript:apagar(@aluno.Id)">Apagar</a>
            </td>
            <td>@aluno.Id</td>
            <td>@aluno.Nome</td>
            <td>@aluno.DataNascimento.ToShortDateString()</td>
            <td>@aluno.Mensalidade?.ToString("0.00")</td>
        </tr>
    }
</table>


<script>
    function apagar(id) { 
    if (confirm('Deseja apagar?'))
       location.href='/aluno/delete?id='+id;
    }
</script>
