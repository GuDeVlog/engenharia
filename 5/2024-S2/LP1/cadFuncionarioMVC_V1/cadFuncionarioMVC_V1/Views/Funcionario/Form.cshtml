
@model FuncionarioViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Funcionário</h2>
<form action="Salvar" method="post">

    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
    <label for="Id" class="control-label">RA</label>
    @if (ViewBag.Operacao == "I")
    {
        <input type="number" Name="Id" value="@Model.Id" class="form-control" />
    }
    else
    {
        <input type="number" Name="Id" value="@Model.Id" class="form-control disabled" readonly />
    }
    <span asp-validation-for="Id" class="text-danger"></span>


    <br />
    <label for="Nome" class="control-label">Nome do funcionário</label>
    <input type="text" Name="Nome" value="@Model.Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>

    <br />
    <label for="Ativo" class="control-label">Ativo</label>
    <input asp-for="Ativo" class="form-check" />    
    <br />
        
    <label for="Tipo" class="control-label">Tipo</label>
    <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<EnumTipoFuncionario>()" class="form-control"></select>
    <span asp-validation-for="Tipo" class="text-danger"></span>
    <br />

    <input type="submit" value="Salvar dados" class="btn btn-success" />
    <br />
</form>
