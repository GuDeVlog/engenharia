@model List<FuncionarioViewModel>

<script>
   // swal('Seja bem vindo ao meu sistema!')
</script>

<h2>Listagem de funcionários</h2>

<a href="/Funcionario/Create">Novo registro</a>
<br />

<table class="table table-striped">
    <tr>
        <th>Ações</th>
        <th>Id</th>
        <th>Nome</th>
        <th>Tipo</th>
        <th>Ativo</th>
    </tr>
    @foreach (var f in Model)
    {
        <tr>
            <td>
                <a href="/funcionario/editar?id=@f.Id">
                    <img src="~/img/edit.png" class="iconListagem" />
                </a>
                &nbsp;
                <a href="javascript:apagar(@f.Id)">
                    <img src="~/img/delete.png" class="iconListagem" />
                </a>
            </td>
            <td>@f.Id</td>
            <td>@f.Nome</td>
            <td>@f.Tipo</td>
            <td>
                @if (f.Ativo)
                {
                    <span class="Ativo">Ativo</span>
                }
                else
                {
                    <span class="text-danger">Inativo</span>
                }
            </td>
        </tr>
    }

</table>