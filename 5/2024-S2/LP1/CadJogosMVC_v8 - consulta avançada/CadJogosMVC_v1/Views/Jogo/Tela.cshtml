@model JogoViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Jogo</h2>
<form action="Salvar" method="post">
    <label for="Id" class="control-label">Código</label>
    <input type="number" Name="Id" value="@Model.Id" class="form-control" />
    <br />
    <label for="Descricao" class="control-label">Nome do jogo</label>
    <input type="text" Name="Descricao" value="@Model.Descricao" class="form-control" />
    <br />
    <label for="Valor" class="control-label">Valor</label>
    <input type="text" Name="Valor" value="@Model.Valor" class="form-control" />
    <br />
    <label for="DataAquisicao" class="control-label">Data de aquisição</label>
    <input type="date" Name="DataAquisicao" value="@Model.DataAquisicao.ToString("yyyy-MM-dd")" class="form-control" />
    <br />
    <label for="CategoriaID" class="control-label">Código da categoria</label>
    <select asp-for="CategoriaID" asp-items="@ViewBag.Categorias" class="form-control"></select>
    <br />
    <input type="submit" value="Salvar dados" class="btn btn-success" />
    <br />
</form>